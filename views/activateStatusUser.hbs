<section class="">
  <div class="container max-w-full">
    <div class="row">
      <div class="min-h-[980px] bg-white py-10 lg:col-6 lg:py-[114px]">
        <div class="mx-auto w-full max-w-[480px]">
          
          <h1 class="mb-4 text-center text-4xl">Activate Account</h1>
          
          <form action="/users/activate" method="POST" id="formActivate">
            
               <div class="bg-red-100 items-center justify-center h-screen">
                    <div class="bg-white p-8 rounded-lg shadow-lg text-center">
                         <h1 class="text-2xl font-bold text-red-600 mb-4">{{success}}</h1>
                         <a href="/users/login" class="text-blue-500 underline">Go to Log In</a>
                    </div>
               </div>
          </form>
          
        </div>
      </div>

      <div
        class="auth-banner bg-gradient flex flex-col items-center justify-center py-16 lg:col-6"
      >
        <img
          class="absolute top-0 left-0 h-full w-full"
          src="/images/login-banner-bg.svg"
          alt=""
        />
        <div class="w-full text-center">
          <h2 class="h3 text-white">
            Develop thinking ability, <br />
            filter content, increase concentration.
          </h2>
          <div class="swiper auth-banner-carousel pt-16">
            <div class="swiper-wrapper pb-16">
              <div class="swiper-slide">
                <img
                  width="667"
                  height="557"
                  class="mx-auto"
                  src="/images/nhung-cau-noi-hay-ve-sach-1.jpg"
                  alt=""
                />
              </div>
              <div class="swiper-slide">
                <img
                  width="667"
                  height="557"
                  class="mx-auto"
                  src="/images/nhung-cau-noi-hay-ve-sach-2.jpg"
                  alt=""
                />
              </div>
              <div class="swiper-slide">
                <img
                  width="667"
                  height="557"
                  class="mx-auto"
                  src="/images/nhung-cau-noi-hay-ve-sach-3.jpg"
                  alt=""
                />
              </div>
            </div>
            <div class="pagination"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src=""></script>

</section>




