<section class="page-hero flex flex-row items-center py-16 bg-gray-50 justify-center">
  <!-- Circular Image Section -->
  <div class=" w-1/3 mb-8 mr-16">
    <img 
      {{#if user.avatar}}
        src="{{user.avatar}}"
      {{/if}}
      src="https://via.placeholder.com/150" 
      id = "profileImage"
      alt="Profile Image" 
      class="w-80 h-80 rounded-full object-cover shadow-lg border-4 border-blue-500"
    />

    <input type="file" id="imageUpload" class="mt-4" />
  </div>

  <!-- Profile Form -->
  <div class="w-2/3 max-w-lg bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Your Profile</h1>

    {{#if success}}
      <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-4 rounded mb-6">
        <p>{{success}}</p>
      </div>
    {{/if}}

    <form action="/users/profile" method="POST" class="space-y-6">
      <div>
        <label for="email" class="block text-sm font-semibold text-gray-700">Email:</label>
        <input 
          disabled 
          type="email" 
          id="email" 
          name="email" 
          value="{{user.email}}" 
          class="w-full mt-1 border-gray-300 rounded-lg shadow-sm py-2 px-4 text-gray-600 bg-gray-100 focus:outline-none"
        />
      </div>

      <div>
        <label for="name" class="block text-sm font-semibold text-gray-700">Name:</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          value="{{user.username}}" 
          class="w-full mt-1 border border-gray-300 rounded-lg shadow-sm py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-400"
          required
        />
      </div>

      <div>
        <label for="address" class="block text-sm font-semibold text-gray-700">Address:</label>
        <input 
          type="text" 
          id="address" 
          name="address" 
          value="{{contact.address}}" 
          class="w-full mt-1 border border-gray-300 rounded-lg shadow-sm py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-400"
          required
        />
      </div>

      <div>
        <label for="phone" class="block text-sm font-semibold text-gray-700">Phone Number:</label>
        <input 
          type="text" 
          id="phone" 
          name="phone" 
          value="{{contact.phone}}" 
          class="w-full mt-1 border border-gray-300 rounded-lg shadow-sm py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-400"
          required
        />
      </div>

      <div class="flex justify-center mt-6">
        <button 
          type="submit" 
          class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-blue-400"
        >
          Update Profile
        </button>
      </div>
    </form>
  </div>
  <script src="/scripts/profile.js"></script>
</section>
