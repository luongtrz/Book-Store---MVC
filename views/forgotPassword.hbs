<section class="">
  <div class="container max-w-full">
    <div class="row">
      <div class="min-h-[980px] bg-white py-10 lg:col-6 lg:py-[114px]">
        <div class="mx-auto w-full max-w-[480px]">
          <h1 class="mb-4 text-center text-4xl">Retrieve Password</h1>
          {{#if error}}
            <p class="text-xl m-3" style="color: red;">{{error}}</p>
          {{/if}}
          {{#if success}}
            <p class="text-xl m-3 flex" style="color: green;">{{success}}</p>
          {{/if}}
          <form action="/users/forgot-password" method="POST" id="forgot-password-form">
            <div class="form-group mt-4">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                id="email"
                class="form-control"
                name="email"
                placeholder="Your Email Address"
                required
                pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
              />
            </div>
            <button class="btn btn-primary mt-10 block w-full" type="submit">
                Send Email
            </button>

            {{#if message}}
            <div class="col-md-12">
              <div class="p-3 mt-3 alert-warning">
                {{{message}}}
              </div>
            </div>
            {{/if}}
          </form>
          
          <div id="notification" class="notification" style="display: none;">
            <span id="notification-message"></span>
          </div>
        </div>
      </div>
      <div class="auth-banner bg-gradient flex flex-col items-center justify-center py-16 lg:col-6">
        <img
          class="absolute top-0 left-0 h-full w-full"
          src="/images/login-banner-bg.svg"
          alt=""
        />
        <div class="w-full text-center">
          <h2 class="h3 text-white">
            Develop thinking ability, <br />
            filter content, increase concentration.
          </h2>
          <div class="swiper auth-banner-carousel pt-16">
            <div class="swiper-wrapper pb-16">
              <div class="swiper-slide">
                <img
                  width="667"
                  height="557"
                  class="mx-auto"
                  src="/images/nhung-cau-noi-hay-ve-sach-1.jpg"
                  alt=""
                />
              </div>
              <div class="swiper-slide">
                <img
                  width="667"
                  height="557"
                  class="mx-auto"
                  src="/images/nhung-cau-noi-hay-ve-sach-2.jpg"
                  alt=""
                />
              </div>
              <div class="swiper-slide">
                <img
                  width="667"
                  height="557"
                  class="mx-auto"
                  src="/images/nhung-cau-noi-hay-ve-sach-3.jpg"
                  alt=""
                />
              </div>
            </div>
            <div class="pagination"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.getElementById('forgot-password-form').submit();
  </script>
  
</section>
