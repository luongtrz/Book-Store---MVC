                    <input type="radio" id="paypal" name="payment" value="paypal" class="mr-2" onchange="togglePaymentDetails()">
                    <label for="paypal">PayPal</label>
                </div>
                <div id="paypal-details" class="hidden">
                    <label for="paypal-email" class="block mb-2">PayPal Email</label>
                    <input type="email" id="paypal-email" name="paypal-email" placeholder="example@paypal.com" class="w-full p-2 border rounded">
