<section class="">
  <div class="container max-w-full">
    <div class="row">
      <div class="min-h-[980px] bg-white py-10 lg:col-6 lg:py-[114px]">
        <div class="mx-auto w-full max-w-[480px]">
          <h1 class="mb-4 text-center text-4xl">Log In</h1>
          <div class="flex signin-options mt-10">
            <a 
              class="flex items-center justify-center btn btn-outline-white w-full text-dark border border-gray-300 rounded-lg py-2 px-4 hover:bg-gray-100 transition"
              href="/users/auth/google"
            >
              <img 
                src="/images/icon-google.png" 
                alt="Google Logo" 
                class="w-5 h-5 mr-2"
                style="width: 20px; height: 20px;"
              />
              Log In With Google
            </a>
          </div>

          <div
            class="relative my-8 text-center after:absolute after:left-0 after:top-1/2 after:z-[0] after:w-full after:border-b after:border-border after:content-['']"
          >
            <span class="relative z-[1] inline-block bg-white px-2"
              >Or Sign In With Email</span
            >
          </div>
          <form id="loginForm" action="/users/login" method="POST">
            <div class="form-group">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                placeholder="Your Email Address"
              />
            </div>
            <div class="form-group mt-4">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                placeholder="Your Password"
              />
            </div>
            
            {{#if error}}
            <div class="alert alert-danger text-red-500">{{error}}</div>
            {{/if}}
            
            {{#if success}}
            <div class="alert alert-success text-green-500">{{success}}</div>

            {{/if}}       
            

            <div class="flex justify-between">
                <a href="/users/forgot-password" class="forgot-password-link block text-left my-4">Forgot Password</a>
                <a href="/users/activate-account" class="activate-account-link block text-right my-4">Activate Your Account</a>
            </div>

            <div id="bannedMessage" class="alert alert-danger text-red-500" style="display: none;">Your account has been banned.</div>
            
            <input id="loginBtn"

              class="btn btn-primary mt-3 block w-full"
              type="button"
              value="Log In"
            />
            <p class="mt-6 text-center">
              Can't <span class="text-dark" href="#">log in</span>?
              <a class="text-dark" href="/users/signup">Sign up</a> for create
              account
            </p>
          </form>
        </div>
      </div>
      <div
        class="auth-banner bg-gradient flex flex-col items-center justify-center py-16 lg:col-6"
      >
        <img
          class="absolute top-0 left-0 h-full w-full"
          src="/images/login-banner-bg.svg"
          alt=""
        />
        <div class="w-full text-center">
          <h2 class="h3 text-white">
            Love books, they are the source of knowledge, <br />
            only knowledge is the way of life.
          </h2>
          <div class="swiper auth-banner-carousel pt-16">
            <div class="swiper-wrapper pb-10">
              <div class="swiper-slide">
                <img
                  width="667"
                  height="700"
                  class="mx-auto"
                  src="/images/Life In The Jungle.png"
                  alt=""
                />
              </div>
              <div class="swiper-slide">
                <img
                  width="667"
                  height="700"
                  class="mx-auto"
                  src="/images/Life In The Jungle (1).png"
                  alt=""
                />
              </div>
              <div class="swiper-slide">
                <img
                  width="667"
                  height="700"
                  class="mx-auto"
                  src="/images/Life In The Jungle.jpg"
                  alt=""
                />
              </div>
            </div>
            <div class="pagination"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/scripts/login.js" defer></script>
</section>